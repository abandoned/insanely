- title 'Insanely'

- unless @projects.blank?
  %ol#projects
    - for project in @projects
      %li.project
        = link_to(project.title, project_tasks_path(project))
        - if current_user.id == project.creator_id
          = link_to('(Settings)', edit_project_path(project), :class => 'small')
        - if project.tasks.active.count > 0 && (project.tasks.completed.count > 0 || project.tasks.iceboxed.count > 0)
          = image_tag(chart(project), :class => 'gchart')
        .project-statuses
          = synopsis_of(project)

%p
  = link_to('Create new project', new_project_path, :class => 'button')
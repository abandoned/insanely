- form_for([@project, @task, setup_assets(@comment)], :html => { :class => 'dressed-up', :multipart => true }) do |f|
  = f.error_messages
  %dl
    %dd
      = f.text_area :message, :rows => 5
    = render :partial => 'assets/form', :locals => { :form => f }
    - if @project.participants.count > 1
      %dd
        = check_box_tag :notify
        %span.small Notify others by email
    %dd
      = f.submit('Leave comment Â»', :class => 'no-margin button')
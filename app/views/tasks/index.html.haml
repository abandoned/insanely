- title @project.title

- unless @tasks.blank?
  -content_for :aside do
    = render :partial => 'shared/resource_states', :locals => { :links => task_links}
  %table#tasks
    %tfoot
      %tr
        %td{:colspan => 2}
          = will_paginate @tasks
    = render :partial => 'task', :collection => @tasks, :locals => { :show_comments => true }
  %p#project-settings
    This project has four collaborators and is private.
  %p
    = link_to('Edit project', edit_project_path(@project))
- else
  %p
    Tabula rasa.
    - unless params[:query] || params[:page] || request.path != active_project_tasks_path
      = link_to('Add one.', new_project_task_path(@project))
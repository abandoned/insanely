- form_for([@project, setup_assets(@task)], :html => { :class => 'dressed-up', :multipart => true }) do |f|
  = f.error_messages
  %dl
    %dd
      = f.text_area :message, :rows => 5
    = render :partial => 'assets/form', :locals => { :form => f }
    -if f.object.new_record? && @project.participants.count > 1
      %dd
        = check_box_tag :notify
        %span.small Notify others by email
    %dd
      = f.submit((f.object.new_record? ? 'Add' : 'Update') +  ' task Â»', :class => 'button')
